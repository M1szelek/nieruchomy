<% if signed_in? %>
  <div class="row">
    <aside class="span8">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/offer_form' %>
      </section>
    <div class="span4">
      <h3>Offer Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Witamy w Nieruchomy.pl</h1>

    <h2>
      Strona główna portalu nieruchomości
      <a href="http://nieruchomy.pl">Nieruchomy.pl</a>
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>